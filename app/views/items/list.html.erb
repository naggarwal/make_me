<h2>Items within <%= @list.name%></h2>
	<% if @items.size > 0 %>
		<% @items.each do |item| %>
			<div>
				<p><%= link_to(item.name, {:action => 'edit', :id => item.id}) %>  - <%= link_to("remove me", {:action => 'destroy', :id => item.id}) %></p>
			</div>
		<% end %>
	<% else %>
		<div>
			<p>There are no items, please add one below</p>
		</div>
	<% end %>
	<%=link_to("Add new Item", {:action => 'new', :id => @list.id})%>
