<div><h2>Create a new item in <%= @list.name%> </h2></div>
	<p></p>
	<%= simple_form_for(:item, :url => {:action => 'create'}, :html => {:class => 'form-horizontal' }) do |f| %>
		<%= render(:partial => "form", :locals => {:f => f}) %>
		<div class="btnBar ">
			<%= submit_tag("Create a New item", {:class => "btn btn-primary"})%>
		</div>
	<% end %>