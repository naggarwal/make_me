<div id='clearance' class='sign-up'>
  <h2>Provide an Email Address</h2>
  <%= error_messages_for(@user) %>
  <%= simple_form_for(:user, :url => {:action => 'create_with_email'},:html => {:class => 'form-horizontal' }) do |f| %>

		<%= f.input :email, required: true, hint:"Enter a valid Email", input_html: { class: 'input-xxlarge', placeholder: 'Email Address' }  %>
		<div class="bottonRow">
			<%= submit_tag("Create your Account")%>
		</div>
	<% end %>
  
  
</div>
