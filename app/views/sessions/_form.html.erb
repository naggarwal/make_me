<%= form_for :session, :url => session_path do |form| %>
  <div class='text-field'>
    <%= form.label :email %>
    <%= form.text_field :email, :type => 'email' %>
  </div>

  <div class='password-field'>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class='submit-field'>
    <%= form.submit %>
  </div>

  <div class='other-links'>
  <%= link_to t('.forgot_password'), new_password_path %><br />
    <%= link_to t('.sign_up'), sign_up_path %> to get an acount if you don't have one.<br />
    
    or use one of the outside acounts:<br \>
	  <%= render :partial => '/shared/authBar' %>
  </div>
<% end %>
